<div class="user-form">

  <h2 class="welcome-title">Welcome to Vremennyy!</h2>
  <p class="welcome-descr">Please sign in to get all of the features!</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="vform-group">
    <%= f.label :email %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", class: "vinput" } %>
  </div>
  <div class="vform-group">
    <%= f.label :password %>
    <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", class: "vinput" } %>
  </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Sign in", :class => 'vform-submit' %>
  <% end %>

  <div class="login_links">
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    <div class="sign-up">
      <p>Don't have any account yet?</p><%= link_to "Sign up!", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
