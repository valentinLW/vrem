<header>
  <div class="header-group">
    <% unless @disable_back %>
      <% if @back_home %>
        <%= link_to(root_path, class:"header-link") do %>
          <i class="fas fa-angle-left"></i>
        <% end %>
      <% else %>
        <%= link_to('#',onclick: "javascript:history.go(-1); return false;", class:"header-link") do %>
          <i class="fas fa-angle-left"></i>
        <% end %>
      <% end%>
    <% end %>
      <% unless @disable_home %>
        <%= link_to(events_path, class:"header-link") do %>
          <i class="fas fa-home"></i>
        <% end%>
      <% end %>
  </div>
  <div class="header-group">
  <% unless @disable_nav_right %>
    <%= link_to(new_event_path, class:"header-link") do %>
        <i class="far fa-plus-square"></i>
    <% end%>

    <% if current_user %>
      <%= link_to(destroy_user_session_path, class:"header-link", method: :delete) do %>
        <i class="fas fa-user-times"></i>
      <% end%>
    <% else %>
      <%= link_to(new_user_session_path, class:"header-link") do %>
        <i class="fas fa-user"></i>
      <% end%>
    <% end %>
  <% end %>
  </div>
</header>
