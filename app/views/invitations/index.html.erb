<div class="invite">

<% @not_guests.each do |user|  %>
  <% if user != current_user %>
    <%= link_to(event_invite_path(@event, user), method: :post, remote: true, class: 'btn btn-success') do %>
      <p>Invite <%= user.nickname %></p>
    <% end %>
  <% end %>
<% end %>

<% @invitations.each do |invitation| %>
<button class="btn btn-primary">
  <%= invitation.user.nickname %>
</button>
<p><%= invitation.status %></p>
<% end %>

</div>
