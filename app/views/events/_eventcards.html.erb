

<%= link_to event_path(event) do %>
  <div class="event-card">
    <div class="event-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(event.image.key) %>);">
    </div>

    <div class="inpic">
      <div class="event-date">
        <p class="day"> <%= event.start_time.strftime("%d") %> </p>
        <p class="month"><%= event.start_time.strftime("%b") %></p>
      </div>
      <%= cl_image_tag(event.user.profile_picture.key, class: "userpic") %>
    </div>

    <h2><%= event.name %></h2>
  </div>
<% end %>
