<%= simple_form_for(event) do |f| %>
  <%= f.input :name %>
  <%= f.file_field :image %>
  <%= f.input :start_time, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :end_time, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :location, required: true, input_html: {id: "flat_address"} %>
  <%= f.input :description %>
  <%= f.submit class: "vbtn btn-paradisio" %>
<% end %>
