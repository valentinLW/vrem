<div class="chat-header">
    <%= link_to(events_path) do %>
      <i class="fas fa-angle-left"></i>
    <% end%>
      <h2>New Event</h2>
      <div class="empty-char"></div>
</div>

<%= simple_form_for(event) do |f| %>
  <%= f.input :name %>
  <%= f.input :start_time, :order => [:day, :month, :year] %>
  <%= f.input :end_time, :order => [:day, :month, :year] %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.submit class: "btn create-btn" %>
<% end %>
