<div class="event-details">
      <div class="event-info">
        <div class="i-container">
          <i class="far fa-clock"></i>
        </div>
        <div>
          <p class="fatgrey"><%= @event.start_time.strftime("%d.%m.%Y") %></p>
          <p><%= @event.start_time.strftime("%H:%M") %></p>
        </div>
      </div>
      <div class="event-info">
        <div class="i-container">
          <i class="far fa-clock"></i>
        </div>
        <div>
          <p class="fatgrey"><%= @event.end_time.strftime("%d.%m.%Y") %></p>
          <p><%= @event.end_time.strftime("%H:%M") %></p>
        </div>
      </div>
      <div class="event-info">
        <div class="i-container">
          <i class="fas fa-map-marked"></i>
        </div>
        <p><%= @event.location %></p>
      </div>
      <div class="event-info">
        <div class="i-container">
          <i class="fas fa-info-circle"></i>
        </div>
        <p><%= @event.description %></p>
      </div>
    </div>

    <div style="text-align: center" >
      <%= link_to "Get directions","https://www.google.com/maps/search/?api=1&query=#{@event.latitude},#{@event.longitude}", class:"nbtn in-aubergine"%>
    </div>

    <div id="map"
      style="width: 100%;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

    </div>
