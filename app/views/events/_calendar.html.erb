<div class="">
  <div class="swiper-header">
  </div>
  <%= month_calendar(events: @events, attribute: :start_time, end_attribute: :end_date) do |date, events| %>
    <%= date.day %>
    <% events.each do |event| %>
      <%= link_to event_path(event) do %>
      <div class="i-color" style="color:#14423f">
        <i class="fas fa-glass-cheers"></i>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>
