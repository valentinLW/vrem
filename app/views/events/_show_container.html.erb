<div class="show-container">
  <div class="eventcards col-10">
    <div class="showname"><h2><%= event.name %></h2></div>
    <div class="img"><img src="" alt="Picture Place"></div>
  </div>


  <div class="eventcards col-10">
    <h5 class="showname">Date:</h5> <p><%= event.start_time.strftime("%d.%m.%Y") %></p>
    <h5 class="showname">Time:</h5> <p><%= event.start_time.strftime("%H:%M") %> - <%= event.end_time.strftime("%H:%M") %></p>
    <h5 class="showname">More about:</h5><p><%= event.description %></p>
    <h5 class="showname">Address:</h5><p><%= event.location %></p>
  </div>

  <div class="mapcards col-10">
    <div id="map"
     style="width: 100%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
