<% if @invitation %>
  <%= link_to(accept_path(@invitation), method: :patch, :class => 'btn btn-success') do %>
  <% end %>
  <%= link_to(reject_path(@invitation), method: :patch, :class => 'btn btn-danger') do %>
  <% end %>
<% end %>

<div id="chat">
  <div id="messages" data-event-id="<%= @event.id %>">
    <% @event.messages.each do |message| %>
      <%= render "messages/message", message:message %>
    <% end %>
  </div>
  <div class="chat-input">
    <%= simple_form_for [ @event, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Message ##{@event.name}" %>
    <% end %>
  </div>
</div>
