<div class="event">
  <%= cl_image_tag(@event.image.key, class: "event-header") %>

  <div class="event-description">
    <h1 class="event-name"> <%= @event.name %></h1>
    <div class="event-host">
      <%= cl_image_tag(@event.user.profile_picture.key, class: "event-header") %>
      <p><%= @event.user.nickname %></p>
    </div>
    <div class="event-buttons">
      <%= link_to("chat", event_chat_path(@event), class: "nbtn in-aubergine") %>
      <% if @event.user_id == current_user.id %>
        <%= link_to("invite", event_invitations_path(@event), method: :get, class: "nbtn n-darkgreyish")%>
      <% end %>
      <% if @invitation && @invitation.status == "pending" %>
        <%= link_to("accept", accept_path(@invitation), method: :patch, class: "nbtn btn-green") %>
        <%= link_to("reject", reject_path(@invitation), method: :patch, class: "nbtn btn-red") %>
      <% else %>
        <%= link_to("upload", event_chat_path(@event), class: "nbtn n-paradisio") %>
      <% end %>
    </div>
    <%= render 'events/attendees' %>
    <div class="event-details">
      <div class="event-info">
        <div class="i-container">
          <i class="far fa-clock"></i>
        </div>
        <div>
          <p class="fatgrey"><%= @event.start_time.strftime("%d.%m.%Y") %></p>
          <p><%= @event.start_time.strftime("%H:%M") %></p>
        </div>
      </div>
      <div class="event-info">
        <div class="i-container">
          <i class="far fa-clock"></i>
        </div>
        <div>
          <p class="fatgrey"><%= @event.end_time.strftime("%d.%m.%Y") %></p>
          <p><%= @event.end_time.strftime("%H:%M") %></p>
        </div>
      </div>
      <div class="event-info">
        <div class="i-container">
          <i class="fas fa-info" style="font-size: 1.2rem;"></i>
        </div>
        <p><%= @event.description %></p>
      </div>
    </div>
    <div id="map"
    style="width: 100%;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
</div>
