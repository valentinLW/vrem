<div class="">
  <div class="event-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(@event.image.key) %>);">
    <h2><%= @event.name %></h2>
  </div>

  <div class="event-buttons">
    <%= link_to("chat", event_chat_path(@event), class: "vbtn btn-aubergine") %>
    <% if @event.user_id == current_user.id %>
      <%= link_to("invite", event_invitations_path(@event), method: :get, class: "vbtn btn-darkgreyish")%>
    <% end %>
    <% if @invitation && @invitation.status == "pending" %>
      <%= link_to("accept", accept_path(@invitation), method: :patch, class: "vbtn btn-green") %>
      <%= link_to("reject", reject_path(@invitation), method: :patch, class: "vbtn btn-red") %>
    <% else %>
      <%= link_to("upload", event_chat_path(@event), class: "vbtn btn-paradisio") %>
    <% end %>
  </div>

  <div class="event-details">
    <div class="event-info">
      <i class="far fa-calendar-alt"></i> <p><%= @event.start_time.strftime("%d.%m.%Y") %></p>
    </div>
    <div class="event-info">
      <i class="far fa-clock"></i> <p><%= @event.start_time.strftime("%H:%M") %> - <%= @event.end_time.strftime("%H:%M") %></p>
    </div>
    <div class="event-info">
      <i class="far fa-map"></i> <p><%= @event.location %></p>
    </div>
    <div class="event-info">
      <i class="fas fa-info"></i> <p><%= @event.description %></p>
    </div>
  </div>

  <%= render 'events/attendees' %>

  <div id="map"
    style="width: 100%; height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
