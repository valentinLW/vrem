

<% keys = [] %>
<% @uploads.each do |upload| %>
  <% upload.media.each do |image| %>
    <% keys << image.key %>
  <% end %>
<% end %>

<div class="upload-container">
  <% boxes = keys.each_slice(10).to_a %>
  <% boxes.each.with_index do |keys, index| %>
    <div class="uploads <%= index.even? ? "f-left" : "f-right" %>">
      <% keys.each_with_index do |key, index| %>
      <%= link_to cl_image_tag(key), event_uploads_path(@event, query: index)  %>
      <% end %>
    </div>
  <% end %>
</div>
<script>
      var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1,
        spaceBetween: 30,
        loop: true,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        navigation: {
          nextEl: ".swiper-button-next",
          prevEl: ".swiper-button-prev",
        },
      });
    </script>
