<% @images = Upload.where(event_id: @event.id) %>

<div class="">
  <div class="event-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(@event.image.key) %>);">
    <h2><%= @event.name %></h2>
  </div>
</div>
<div class="event-media">
  <% @images.each_with_index do |image, index| %>
    <% if index.even? %>
      <div class="event-media-column">
    <% end %>
      <img src="<%= image %>" alt="" class="event-media-image">
    <% if index.odd? %>
      </div>
    <% end %>
  <% end %>
</div>
